{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS", // Ensure this is CommonJS for a standard Express app
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  // Add this block below
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    }
  }
}